DECLARE @BEGINDELETINGROWS INT = 1 --ATLEAST ONE ROW HAS TO BE DELETED, BY THE TIME NO ROW, IT STOPS
WHILE @BEGINDELETINGROWS > 0 
BEGIN
DELETE TOP (1000) FROM POSTS
WHERE ID >= 20000000
SET @BEGINDELETINGROWS = @@ROWCOUNT -- THIS ONE CHECKS THE NO OF ROWS DELETED FROM THE PREVIOUS DELETE STATEMENT. IF NO ROW DELETED
-- THIS WILL SET @BEGINDELETINGROWS TO 0 , HENCE THE STATEMENT STOPS THERE. 
END
